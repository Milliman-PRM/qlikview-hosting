<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <section name="FileMonitorHandler" type="Milliman.Reduction.SchedulerHost.Config.FileMonitorConfigSection, Milliman.Reduction.SchedulerHost"/>
  </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
    </startup>
  <system.serviceModel>
    <services>
      <service name="Milliman.Reduction.SchedulerEngine.SchedulerService" behaviorConfiguration="SchedulerBehavior">
        <endpoint address="http://localhost:22335/Reduction/Scheduler.svc" binding="wsHttpBinding" contract="Milliman.Reduction.SchedulerEngine.ISchedulerService">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="SchedulerBehavior" >
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IReductionService" maxReceivedMessageSize="20000000" maxBufferSize="20000000" closeTimeout="00:10:00" openTimeout="00:10:00" sendTimeout="12:00:00" receiveTimeout="12:00:00"/>
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:8733/Milliman.Reduction.ReductionHost/ServiceHost/" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IReductionService" contract="Reduction.IReductionService" name="BasicHttpBinding_IReductionService"/>
    </client>
  </system.serviceModel>
   
  <log4net>
  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR"/>
      <foreColor value="White"/>
      <backColor value="Red, HighIntensity"/>
    </mapping>
    <mapping>
      <level value="DEBUG"/>
      <backColor value="Green"/>
    </mapping>
    <mapping>
      <level value="INFO"/>
      <foreColor value="White"/>
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
    </layout>
  </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="ColoredConsoleAppender"/>
    </root>
  </log4net>

  <FileMonitorHandler>
    <Monitors>
      <FileMonitor Name="WatchTempFolder" FolderName="D:\ReductionRoot" Pattern="request_complete.txt" SubFolders="True" PollingTime="1000">
        <Processing>
          <Process Name="ProcessFile" Type="Milliman.Reduction.SchedulerSender.Sender, Milliman.Reduction.SchedulerSender" Method="Send" Arg="FolderName"/>
        </Processing>
      </FileMonitor>
    </Monitors>
  </FileMonitorHandler>
  
</configuration>
